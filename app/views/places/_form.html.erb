<%= form_with model: place, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "title" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content, "content" %><br />
    <%= f.text_area :content, class: :form_text %>
  </div>

  <div class="field">
    <%= f.label :image, "image" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :address, "address" %><br />
    <%= f.text_area :address, class: :form_text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form_btn  %>
  </div>
<% end %>