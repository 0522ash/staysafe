<div class="card">
  <%= link_to image_tag(place.image, class: :card_img ), place_path(place) %>
  <div class="card_body">
    <%= link_to place.title, place_path(place), class: :card_title%>
    <p class="card_summary">
      <%= place.content %>
    </p>
    <%= link_to "by #{place.user.name}", "#", class: :card_user %>
  </div>
</div>