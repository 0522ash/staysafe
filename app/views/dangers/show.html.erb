<main class="main">
  <div class="inner">
    <div class="danger_wrapper">
      <p class="danger_hedding">
        <%= @danger.title %>
      </p>
      <%= link_to "by #{@danger.user.name}", "#", class: :danger_user %>
      <% if current_user == @danger.user%>
        <div class="danger_manage">
          <%= link_to "編集する", edit_danger_path, class: :danger_btn %>
          <%= link_to "削除する", danger_path, method: :delete, class: :danger_btn %>
        </div>
      <% end %>
      <div class="danger_image">
        <%= image_tag @danger.image %>
      </div>
      <div class="danger_body">
        <div class="danger_detail">
          <p class="detail_content">詳細</p>
          <p class="detail_message">
            <%= @danger.content %>
            <%= @danger.address %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>



<script type="text/javascript">
  function initMap() {
    var test ={lat: <%= @danger.latitude %>, lng: <%= @danger.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 15, 
              center: test
              });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= @danger.address %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });

    var marker = new google.maps.Marker({
                  position:test,
                  map: map,
                  title: contentString
                 });

     marker.addListener('click', function() {
       infowindow.open(map, marker);
     });
  }
</script>

<script async defer
              src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyBJXelHPXR7VLkcZRjRPNTWkofnJU9zkjk&callback=initMap">
</script>
<div id="map"></div>